<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.kjproducts.badmintontrainer.ContentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvContentTilte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#009000"
                android:layout_marginBottom="5dp"
                android:textSize="23sp"
                android:text="TIÊU ĐỀ"
                android:textStyle="bold" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pageImage"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"
                android:background="#EAEAEA" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:ci_drawable_unselected="@drawable/green_radius"
                app:ci_drawable="@drawable/open_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lời hướng dẫn :"
                android:textColor="#009000"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/contentChange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mergeText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="19sp"
                    tools:text="kfsahkjfhaskjdhakjsadfhsdkjfhsdkjffhnsd|" />

                <TextView
                    android:id="@+id/mergeText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="19sp"
                    tools:text="kfsahkjfhaskjdhakjsadfhsdkjfhsdkjffhnsd|" />

                <TextView
                    android:id="@+id/mergeText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="19sp"
                    tools:text="kfsahkjfhaskjdhakjsadfhsdkjfhsdkjffhnsd|" />

                <TextView
                    android:id="@+id/mergeText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="19sp"
                    tools:text="kfsahkjfhaskjdhakjsadfhsdkjfhsdkjffhnsd|" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
